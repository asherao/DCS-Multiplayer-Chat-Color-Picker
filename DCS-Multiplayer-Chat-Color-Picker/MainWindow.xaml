        <Button x:Name="button_saveColors" Content="Save Colors" Click="Button_saveColors_Click" 
                Grid.Column="2" Grid.Row="7" Margin="5" TabIndex="8">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Viewbox>
                        <TextBlock><Run Text="Save" FontWeight="Bold"/></TextBlock>
                    </Viewbox>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>

